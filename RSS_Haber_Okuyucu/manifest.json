{
  "manifest_version": 3,
  "name": "NeHaber RSS Okuyucu",
  "version": "3.2",
  "description": "Özelleştirilebilir RSS haber takipçisi",
  "permissions": [
    "storage",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "https://*/",
    "http://*/"
  ],
"background": {
  "scripts": ["background.js"]
  
},
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
"browser_specific_settings": {
  "gecko": {
    "id": "studiogamesome@gmail.com"
  }
}
  
}